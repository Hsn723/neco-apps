groups:
  - name: example
    rules:
      - alert: The number of kube-apiserver is less than 3
        expr: count(up{job="kubernetes-apiservers"} == 1) < 3
        for: 1m
        labels:
          severity: page
        annotations:
          summary: The number of kube-apiserver is less than 3
  - name: out-of-sync
    rules:
      - alert: The application is out-of-sync
        expr: count(argocd_app_sync_status{sync_status="Synced"} == 0) > 0
        for: 20m
        labels:
          severity: warning
        annotations:
          summary: The sync_status is out-of-sync
